<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="245.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddPlayersController">
   <children>
      <AnchorPane prefHeight="34.0" prefWidth="200.0" style="-fx-background-color: #125883;">
         <children>
            <Label layoutX="54.0" layoutY="5.0" text="Jugadores" textFill="WHITE">
               <font>
                  <Font name="Century Gothic" size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label layoutX="14.0" layoutY="44.0" text="Total: 6">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font>
      </Label>
      <Label fx:id="lblPlayers" layoutX="100.0" layoutY="44.0" text="Ingresados:   4">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font>
      </Label>
      <Label layoutX="44.0" layoutY="80.0" text="Nombre jugador">
         <font>
            <Font name="Century Gothic" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtPlayerName" alignment="CENTER" layoutX="10.0" layoutY="110.0" prefHeight="25.0" prefWidth="181.0" style="-fx-border-color: #125883; -fx-border-width: 0px 0px 2px 0px; -fx-background-color: transparent;" />
      <Button fx:id="btnAddPlayer" layoutX="38.0" layoutY="162.0" mnemonicParsing="false" onAction="#addPlayerAction" style="-fx-background-color: linear-gradient( #125883, #2081BC);" text="Agregar jugador" textFill="WHITE">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="btnStartGame" layoutX="51.0" layoutY="205.0" mnemonicParsing="false" onAction="#startGameAction" style="-fx-background-color: linear-gradient( #B41515, #FA4040);" text="Iniciar Juego" textFill="WHITE">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
